// prisma/schema.prisma

generator client {
  provider = "prisma-client"
  output   = "../src/lib/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  BUYER
  SELLER
  ADMIN
}

enum OrderStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum PayoutStatus {
  PENDING
  PROCESSING
  PAID
  FAILED
}

enum PluginStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// ============================================
// USER & AUTH
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  passwordHash  String?
  image         String?
  role          UserRole  @default(BUYER)

  // Seller specific fields
  bio       String? @db.Text
  website   String?
  twitter   String?
  instagram String?

  // Stripe
  stripeCustomerId    String? @unique
  stripeConnectId     String? @unique // For sellers
  stripeConnectStatus Boolean @default(false)

  // Relationships
  seller   Seller?
  accounts Account[]
  sessions Session[]
  orders   Order[]
  reviews  Review[]
  payouts  Payout[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  plugins   Plugin[]

  @@index([email])
  @@index([stripeCustomerId])
  @@index([stripeConnectId])
  @@map("users")
}

model Seller {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  bio       String?  @db.Text
  website   String?
  twitter   String?
  instagram String?
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  plugins   Plugin[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sellers")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model OTP {
  id         String   @id @default(cuid())
  email      String
  hashedCode String
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  consumed   Boolean  @default(false)

  @@index([email])
}

// ============================================
// PLUGIN
// ============================================

model Plugin {
  id               String  @id @default(cuid())
  title            String
  slug             String  @unique
  description      String  @db.Text
  shortDescription String? @db.VarChar(200)

  // Media
  thumbnailUrl String
  videoUrl     String?
  demoGifUrl   String
  images       String[] // Array of image URLs

  // Pricing
  price         Decimal @db.Decimal(10, 2)
  discountPrice Decimal @default(0) @db.Decimal(10, 2)
  currency      String  @default("USD")

  // Technical details
  fileUrl  String // S3 URL
  fileName String
  fileSize Int // in bytes
  version  String @default("1.0.0")

  // Compatibility
  aeVersions       String[] // ["2023", "2024", "2025"]
  operatingSystems String[] // ["Windows", "macOS"]

  // Metadata
  downloadCount Int          @default(0)
  viewCount     Int          @default(0)
  status        PluginStatus @default(DRAFT)
  featured      Boolean      @default(false)

  // Relationships
  sellerId String
  seller   Seller @relation(fields: [sellerId], references: [id], onDelete: Cascade)

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  subcategoryId String?
  subcategory   Subcategory? @relation(fields: [subcategoryId], references: [id])

  tags       PluginTag[]
  orderItems OrderItem[]
  reviews    Review[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  publishedAt DateTime?
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?

  @@index([sellerId])
  @@index([categoryId])
  @@index([status])
  @@index([slug])
  @@index([featured])
  @@index([createdAt])
  @@map("plugins")
}

// ============================================
// CATEGORY & TAGS
// ============================================

model Category {
  id          String  @id @default(cuid())
  name        String  @unique
  slug        String  @unique
  description String?
  icon        String? // Icon name or URL
  order       Int     @default(0)

  plugins Plugin[]

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  subcategories Subcategory[]

  @@index([slug])
  @@map("categories")
}

model Subcategory {
  id          String  @id @default(cuid())
  name        String
  slug        String  @unique
  description String?
  order       Int     @default(0)

  // Relations
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  plugins    Plugin[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([categoryId])
  @@index([slug])
  @@map("subcategories")
}

model Tag {
  id   String @id @default(cuid())
  name String @unique
  slug String @unique

  plugins PluginTag[]

  createdAt DateTime @default(now())

  @@index([slug])
  @@map("tags")
}

model PluginTag {
  pluginId String
  tagId    String

  plugin Plugin @relation(fields: [pluginId], references: [id], onDelete: Cascade)
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([pluginId, tagId])
  @@index([pluginId])
  @@index([tagId])
  @@map("plugin_tags")
}

// ============================================
// ORDERS & PAYMENTS
// ============================================

model Order {
  id          String @id @default(cuid())
  orderNumber String @unique // Human-readable order number

  // Buyer info
  buyerId    String
  buyer      User   @relation(fields: [buyerId], references: [id])
  buyerEmail String

  // Payment
  stripePaymentIntentId String?     @unique
  status                OrderStatus @default(PENDING)

  // Totals
  subtotal Decimal @db.Decimal(10, 2)
  tax      Decimal @default(0) @db.Decimal(10, 2)
  total    Decimal @db.Decimal(10, 2)
  currency String  @default("USD")

  // Relationships
  items       OrderItem[]
  licenseKeys LicenseKey[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  completedAt DateTime?

  @@index([buyerId])
  @@index([status])
  @@index([orderNumber])
  @@index([createdAt])
  @@map("orders")
}

model OrderItem {
  id String @id @default(cuid())

  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  pluginId String
  plugin   Plugin @relation(fields: [pluginId], references: [id])

  // Snapshot of plugin at purchase time
  pluginTitle String
  pluginPrice Decimal @db.Decimal(10, 2)

  // Seller earnings (after platform fee)
  sellerEarnings Decimal @db.Decimal(10, 2)
  platformFee    Decimal @db.Decimal(10, 2)

  createdAt DateTime @default(now())

  @@index([orderId])
  @@index([pluginId])
  @@map("order_items")
}

// ============================================
// LICENSE KEYS
// ============================================

model LicenseKey {
  id  String @id @default(cuid())
  key String @unique

  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  pluginId String

  // Download tracking
  downloadCount  Int       @default(0)
  maxDownloads   Int       @default(5) // Allow re-downloads
  lastDownloadAt DateTime?

  isActive Boolean @default(true)

  createdAt DateTime  @default(now())
  expiresAt DateTime? // Optional expiration

  @@index([orderId])
  @@index([key])
  @@map("license_keys")
}

// ============================================
// REVIEWS & RATINGS
// ============================================

model Review {
  id      String  @id @default(cuid())
  rating  Int // 1-5 stars
  comment String? @db.Text

  // Relationships
  pluginId String
  plugin   Plugin @relation(fields: [pluginId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Moderation
  isVisible Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([pluginId, userId]) // One review per user per plugin
  @@index([pluginId])
  @@index([userId])
  @@index([rating])
  @@map("reviews")
}

// ============================================
// PAYOUTS
// ============================================

model Payout {
  id String @id @default(cuid())

  sellerId String
  seller   User   @relation(fields: [sellerId], references: [id])

  amount   Decimal      @db.Decimal(10, 2)
  currency String       @default("USD")
  status   PayoutStatus @default(PENDING)

  // Stripe
  stripePayoutId String? @unique

  // Period covered
  periodStart DateTime
  periodEnd   DateTime

  // Metadata
  description String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  paidAt    DateTime?

  @@index([sellerId])
  @@index([status])
  @@index([createdAt])
  @@map("payouts")
}

// ============================================
// ANALYTICS (Optional - could use external service)
// ============================================

model PluginView {
  id       String @id @default(cuid())
  pluginId String

  // Analytics data
  ipAddress String?
  userAgent String?
  referrer  String?
  country   String?

  createdAt DateTime @default(now())

  @@index([pluginId])
  @@index([createdAt])
  @@map("plugin_views")
}
